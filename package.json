{
  "name": "webpack-watch-file-plugin",
  "version": "1.0.0",
  "description": "Simple webpack plugin to watch files and run commands when they change",
  "homepage": "https://github.com/mytonwallet-org/webpack-watch-file-plugin#readme",
  "bugs": {
    "url": "https://github.com/mytonwallet-org/webpack-watch-file-plugin/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mytonwallet-org/webpack-watch-file-plugin.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
